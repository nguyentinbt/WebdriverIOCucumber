{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "baseUrl": ".",
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/cucumber-framework"
        ]
    },
    "include": [
        "./test/**/*.ts",
        "src/pages/login.page.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}